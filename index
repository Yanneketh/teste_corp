                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email">
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-success btn-custom">Adicionar Celular</button>
            </div>
        </form>
    </div>

