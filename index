<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Inventário de Celulares</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script>
        async function fetchCelulares() {
            try {
                const response = await fetch("http://127.0.0.1:5000/CADASTRO");
                if (!response.ok) throw new Error("Erro ao buscar celulares.");
                const celulares = await response.json();
                console.log("Celulares recuperados:", celulares);  // Log dos dados recuperados
                const celularesList = document.getElementById("celularesList");
                celularesList.innerHTML = "";
                celulares.forEach(celular => {
                    celularesList.innerHTML += `
                        <tr>
                            <td>${celular.ns}</td>
                            <td>${celular.modelo}</td>
                            <td>${celular.responsavel}</td>
                            <td>
                                <button class="btn btn-warning btn-sm" onclick="editCelular('${celular.ns}')">Editar</button>
                                <button class="btn btn-danger btn-sm" onclick="deleteCelular('${celular.ns}')">Excluir</button>
                            </td>
                        </tr>`;
                });
            } catch (error) {
                alert(error.message);
            }
        }

        async function addCelular() {
            const ns = document.getElementById("ns").value;
            const modelo = document.getElementById("modelo").value;
            const responsavel = document.getElementById("responsavel").value;
            try {
                const response = await fetch("http://127.0.0.1:5000/CADASTRO", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ ns, modelo, responsavel })
                });
                if (!response.ok) throw new Error("Erro ao cadastrar celular.");
                alert("Celular cadastrado com sucesso!");
                fetchCelulares();
            } catch (error) {
                alert(error.message);
            }
        }

        async function editCelular(ns) {
            const celular = prompt("Digite as novas informações do celular (modelo,responsável):");
            if (celular) {
                const [modelo, responsavel] = celular.split(",");
                if (!modelo || !responsavel) {
                    alert("Por favor, forneça tanto o modelo quanto o responsável.");
                    return;
                }
                console.log(`Editando celular com ns: ${ns}, modelo: ${modelo}, responsavel: ${responsavel}`);  // Log dos dados enviados
                try {
                    const response = await fetch(`http://127.0.0.1:5000/CADASTRO/${ns}`, {
                        method: "PUT",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({ ns, modelo, responsavel })
                    });
                    if (!response.ok) throw new Error("Erro ao atualizar celular.");
                    alert("Celular atualizado com sucesso!");
                    fetchCelulares();
                } catch (error) {
                    alert(error.message);
                }
            }
        }

        async function deleteCelular(ns) {
            if (confirm("Tem certeza que deseja excluir este celular?")) {
                console.log(`Deletando celular com ns: ${ns}`);  // Log do ns enviado
                try {
                    const response = await fetch(`http://127.0.0.1:5000/CADASTRO/${ns}`, { method: "DELETE" });
                    if (!response.ok) throw new Error("Erro ao excluir celular.");
                    alert("Celular excluído com sucesso!");
                    fetchCelulares();
                } catch (error) {
                    alert(error.message);
                }
            }
        }

        window.onload = fetchCelulares;
    </script>
</head>
<body class="container mt-5">
    <h1 class="mb-4 text-center">Inventário de Celulares</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Número de Série</th>
                <th>Modelo</th>
                <th>Responsável</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody id="celularesList"></tbody>
    </table>

    <h2 class="mt-4">Adicionar Celular</h2>
    <form class="row g-3" onsubmit="event.preventDefault(); addCelular();">
        <div class="col-md-4">
            <label for="ns" class="form-label">Número de Série</label>
            <input type="text" class="form-control" id="ns" required>
        </div>
        <div class="col-md-4">
            <label for="modelo" class="form-label">Modelo</label>
            <input type="text" class="form-control" id="modelo" required>
        </div>
        <div class="col-md-4">
            <label for="responsavel" class="form-label">Responsável</label>
            <input type="text" class="form-control" id="responsavel" required>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Adicionar</button>
        </div>
    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


